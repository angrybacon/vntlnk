{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "incremental": true,
    "jsx": "preserve",
    "module": "preserve",
    "noEmit": true,
    "paths": {
      "~/app/*": ["app/*"],
      "~/components/*": ["components/*"],
      "~/hooks/*": ["hooks/*"],
      "~/modules/*": ["modules/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "exclude": ["node_modules"],
  "extends": "./node_modules/@korumite/ts/tsconfig.dom.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
